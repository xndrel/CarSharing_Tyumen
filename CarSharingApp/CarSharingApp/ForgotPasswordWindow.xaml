<Window x:Class="CarSharingApp.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Восстановление пароля" 
        Height="250" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        Background="#2B2B2B">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Введите номер телефона" 
                       Foreground="White" 
                       FontSize="16"
                       HorizontalAlignment="Center"/>

            <TextBox x:Name="txtPhone" 
                     Margin="0,20,0,10" 
                     Height="30"/>

            <Button Content="Отправить код" 
                    Click="SendCode_Click"
                    Background="#FF4444"
                    Foreground="White"
                    Height="30"/>

            <Button Content="Назад" 
                    Click="Cancel_Click"
                    Background="Transparent"
                    Foreground="#FF4444"
                    Margin="0,10"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>