<Window x:Class="CarSharingApp.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение номера" 
        Height="250" 
        Width="350"
        Background="#2B2B2B">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Введите код из SMS" 
                     Foreground="White" 
                     HorizontalAlignment="Center"/>

            <TextBox x:Name="txtCode" 
                     Margin="0,20" 
                     Height="30" 
                     FontSize="20"
                     HorizontalAlignment="Center" 
                     Width="120"/>

            <Button Content="Подтвердить" 
                    Click="VerifyButton_Click"
                    Background="#FF4444"
                    Foreground="White"
                    Height="30"
                    Width="120"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>